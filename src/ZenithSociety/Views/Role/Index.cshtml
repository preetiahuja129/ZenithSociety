@model IEnumerable<ZenithSociety.Models.UserRoleModels.RoleListViewModel>
@using ZenithSociety.Models.UserRoleModels

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

    <p>
        <a asp-action="AddEdit">Add Role</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfUsers)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.OrderBy(a => a.RoleName)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfUsers)
            </td>
            @if (!item.RoleName.Equals("Admin"))
            {
            <td>
                    <a asp-action="AddEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
